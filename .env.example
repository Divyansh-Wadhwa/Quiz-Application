# Production Environment Configuration
# Copy this to .env in your project root

# Database Configuration
DATABASE_URL=postgresql://quiz_user:quiz_password@localhost:5432/quizapp
POSTGRES_DB=quizapp
POSTGRES_USER=quiz_user
POSTGRES_PASSWORD=quiz_password

# Application URLs (Update these with your production URLs)
FRONTEND_URL=https://your-quiz-app.netlify.app
AUTH_SERVICE_URL=https://your-auth-service.railway.app
QUESTION_SERVICE_URL=https://your-question-service.railway.app
RESULT_SERVICE_URL=https://your-result-service.railway.app

# CORS Configuration
ALLOWED_ORIGINS=https://your-quiz-app.netlify.app,https://your-domain.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600000

# Server Ports
AUTH_SERVICE_PORT=8080
QUESTION_SERVICE_PORT=8081
RESULT_SERVICE_PORT=8082
